
<h3>{{viewTitle}}</h3>
<form action="/register" method="POST">
<input type="hidden" name="_id" value="{{register._id}}">
 
<div class = "form-group">
<label>Name</label>
<input type="text" maxlength="100" class="form-control" name="name" placeholder="Name" value="{{register.name}}">
 

</div>
<div class = "form-group">
<label>Age</label>
<input type="number" min='1' max='50' class="form-control" name="age" placeholder="Age" value="{{register.age}} ">
</div>
<div class = "form-row">
<div class = "form-group col-md-6">
<label>Email ID</label>
<input type="text" class="form-control" name="email" placeholder="Email" value="{{register.email}} ">
</div>

</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
<a class="btn btn-secondary" href="/register/list"><i class="fa fa-list-alt"></i> View All Users</a>
</div>
</form>